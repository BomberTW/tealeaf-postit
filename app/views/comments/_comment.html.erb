<div class="row">

  <div class="col-md-2">
    <div class="well block-vote">
      <a href="#" class="vote-up"><i class="fa fa-arrow-up"></i></a>
      <span class="vote-count">10 votes</span>
      <a href="#" class="vote-down"><i class="fa fa-arrow-down"></i></a>
    </div><!-- well -->
  </div><!-- col-md-1 -->
  <div class="col-md-4">
    <div class="well">
      <div class="post-content">
          <%= sanitize comment.body.gsub(/\n/, '<br/>') %>
      </div><!-- post-content -->
      <p>
        <span class="quiet">posted by</span> <%= link_to comment.user.name , "#" %>
        <small>at 10/30/2015  7:43am PDT</small>
      </p>
      <%= link_to "0 comments", "#" %>
    </div><!-- well -->
  </div><!-- col-md-8 -->
</div><!-- row -->
