<div class="conatiner">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Create New Post</h1>

      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div><!-- form-group -->
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: "form-control", rows: 10 %>
        </div><!-- form-group -->
        <%= f.submit %>
      <% end %>
    </div><!-- col-md-6 col-md-offset-2 -->
</div><!-- row -->
</div><!-- conatiner -->
